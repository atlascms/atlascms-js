{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "target": "es6",
    "outDir": "dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/tests"]
}
